  position: relative;
}
.video_detail .video_title {
    padding: 10px;
}
.video_detail video {
    width: 100%;
}
.video_detail .cover_img {
    position: absolute;
    left: 0;
    bottom: 4px;
    width: 100%;
    height: 225px;
}
.video_detail .play {
    width: 40px;
    height: 40px;
    position: absolute;
    left: 50%;
    bottom: 30%;
